{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc.exe build active file",
      "command": "G:/Programs/MinGW/bin/gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        ""
      ],
      "options": {
        "cwd": "G:/Programs/MinGW/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: G:/Programs/MinGW/bin/gcc.exe"
    }
  ]
}
